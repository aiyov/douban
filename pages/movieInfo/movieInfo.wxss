/* pages/movieInfo/movieInfo.wxss */
.movieInfo {
  margin: 0 30rpx;
}
.movie {
  font-size: 56rpx;
  margin-top: 50rpx;
  margin-bottom: 10rpx;
  line-height: 1.3;
}
.movieType {
  display: flex;
  flex-direction: row;
  margin-bottom: 60rpx;
}
.movieTypeWrapper {
  flex: 1;
}
.moviePoster {
  width: 215rpx;
  height: 300rpx;
  margin-left: 40rpx;
}
.movieText {
  margin-top: 20rpx;
  line-height: 1.6;
  font-size: 30rpx;
  color: #494949;
}
.movieSource {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx 30rpx 20rpx 0;
  margin: 0 -30rpx 60rpx 0;
  border-top: 1rpx solid #E8E8E8;
  border-bottom: 1rpx solid #E8E8E8;
  line-height: 1.5;
  font-size: 34rpx;
}
.sourceTitle {
  color: #42bd56;
}
.sourceSite {
  color: #ccc;
}
.isSaw {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 34rpx;
}
.notSaw , .seed {
  width: 48%;
  height: 60rpx;
  margin-bottom: 60rpx;
  color: #ffb712;
  text-align: center;
  line-height: 60rpx;
  border: 1px solid #ffb712;
  border-radius: 6rpx;
}
.movieTitle, .actorsTitle, .prevueTitle, .commentTitle {
  font-size: 40rpx;
  line-height: 1.2;
  color: #aaa;
}
.movieIntroduce {
  margin-top: 30rpx;
}
.movieSummary {
  font-size: 34rpx;
  line-height: 1.4;
  color: #494949;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
   overflow: hidden;
  text-overflow:ellipsis;
}
.showSummary {
  -webkit-line-clamp:3;
}
.showAll {
  float: right;
  color: #42bd56;
}
.tags, .actorsList {
  margin: 60rpx 0;
}
.tagsTitle {
  font-size: 36rpx;
  line-height: 1.2;
  color: #aaa;
}
.tagsItem {
  float: left;
  font-size: 34rpx;
  padding: 10rpx 24rpx;
  margin: 20rpx 20rpx 0 0;
  border-radius: 46rpx;
  text-align: center;
  color: #494949;
  background: #f5f5f5;
}
.tag {
  overflow: hidden;
}
scroll-view {
  margin-top: 30rpx;
}
.actors {
  display: flex;
  flex-direction: row;
}
.actorsItem {
  width: 200rpxx;
  margin-right: 30rpx;
}
.actorsItem image {
  width: 200rpx;
}
.actorsItem .name, .actorsItem .identify {
  width: 200rpx;
  margin-top: 16rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  font-size: 34rpx;
  line-height: 1.5;
  white-space: normal;
  text-align: center;
  color: #494949;
}
.actorsItem .identify {
  color: #aaa;
}
.prevue {
  margin-bottom: 60rpx;
}
.prevueItem {
   width: 460rpx; 
   margin-right: 20rpx;
}
.prevueItem image {
    width: 460rpx;
}
.prevueList {
   display: flex; 
   flex: row; 
}
.commentPerson image {
  float: left;
  width: 72rpx;
  height: 72rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  vertical-align: text-top;
}
.commentName {
  overflow: hidden
}
.commentId {
  margin-bottom: 12rpx;
}
.commentTime {
  margin-bottom: 22rpx;
  font-size: 26rpx;
  color: #aaa;
}
.commentContent text {
  font-size: 34rpx;
  color: #494949;
}
.dianzan {
  width: 100rpx;
  height: 40rpx;
  margin-top: 20rpx;
}
.dianzan image {
  float: left;
  width: 40rpx;
}
.dianzan text {
  vertical-align: text-top;
  color: #ccc;
  overflow: hidden;
}
.commentList {
  margin-top: 30rpx;
}
.commentItem {
  margin-bottom: 60rpx;
}